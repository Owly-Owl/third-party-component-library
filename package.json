    "description": "A third party component library for Shopify Hydrogen.",
    "main": "dist/mjs/index.js",
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "rm -rf dist/ && npm run build:esm && npm run build:cjs && ./create-hybrid-package",
        "build:esm": "tsc --module esnext --outDir dist/mjs --target esnext",
        "build:cjs": "tsc --module commonjs --outDir dist/cjs --target es2015"
    },
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@shopify/hydrogen": "^0.21.0",
        "@types/node": "^17.0.35",
        "@types/react": "^18.0.9",
        "@types/react-dom": "^18.0.5",
        "typescript": "^4.7.2",
        "type-fest": "^2.13.0"
    },
    "peerDependencies": {
        "@shopify/hydrogen": ">=0.21.0",
        "graphql-tag": "2.x"
    }
}