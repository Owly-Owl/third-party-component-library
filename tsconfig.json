{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "esModuleInterop": true,
        "jsx": "react",
        "lib": [
            "es5",
            "es2015",
            "es2016",
            "es2020",
            "dom",
            "esnext"
        ],
        "types": [
            "node"
        ],
        "module": "esnext",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "outDir": "dist/esm",
        "sourceMap": true,
        "strict": true,
        "target": "ES2018"
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
}